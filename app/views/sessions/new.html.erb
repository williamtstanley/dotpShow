<div class="col-md-3">
</div>
<div class="col-md-6">
	<h1> Sign In </h1>
  	<%= form_tag sessions_path do %>
    	<div class='form-group'>
     	 	<%= label_tag :email, nil, class: "control-label required" %>
      		<%= email_field_tag :email, nil, {class: "form-control", placeholder: "email address"} %>
	  	</div>
    	<div class="form-group">    
      		<%= label_tag :password, nil, class: "control-label required" %>
      		<%= password_field_tag :password, nil, {class: "form-control", placeholder: "password"} %>
    	</div>
		<div class="form-group">  
       		<%= submit_tag "Sign In", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>
<div class="col-md-3">
</div>
