<div class="episode-container">
    <h1><%= @episode.title.titleize %></h1>

    <p>
        <%= @episode.body %>
    </p>

    <div class="links">
      <% if can? :manage, @episode %>
        |
        <%= link_to "Edit", edit_question_path(@episode) %>
        |
        <%= link_to "Delete", question_path(@episode), method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
  </div>
<br>
